{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "server.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--no-debugger"
        ],
        "jinja": true,
        "justMyCode": true
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome",
        "url": "http://localhost:3000",  // Update with your React app's port
        "webRoot": "${workspaceFolder}/client/public",
        "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
        }
      }
    ]
  }
  